{% extends 'SonataAdminBundle::standard_layout.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    {% if form is defined %}
        {{ form_stylesheet(form) }}
    {% endif %}
    <link rel="stylesheet" href="{{ asset('bundles/zenwebaventureparc/css/calendarstyle.css') }}" media="all">
    <link rel="stylesheet" href="{{ asset('bundles/zenwebaventureparc/css/colorpicker.css') }}" media="all">
{% endblock %}
{% block javascripts %}
    {{ parent() }}

    {% if form is defined %}
        <script type="text/javascript" src="{{ asset('bundles/zenwebaventureparc/js/colorpicker.js') }}"></script>
        {{ form_javascript(form) }}
    {% endif %}
{% endblock %}
{% block sonata_top_nav_menu %}
    {{ parent() }}
    {% if app.security.token and is_granted('ROLE_SONATA_ADMIN') %}
        <div class="navbar-right">
            <a href="{{ path('zenweb_aventure_parc_order_create_form') }}" class="btn btn-primary btn-sm">Cr√©er une commande</a>
        </div>
    {% endif %}
{% endblock %}
