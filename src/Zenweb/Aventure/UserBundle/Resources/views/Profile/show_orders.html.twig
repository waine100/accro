{% extends "SonataUserBundle:Profile:action.html.twig" %}

{% block sonata_profile_content %}
    <div class="panel panel-info">
        <div class="panel-heading">
            <h3 class="panel-title">{{ "Mes réservations" | trans({}, 'SonataUserBundle')}}</h3>
        </div>
        <div class="panel-body">
            {% if orders|length > 0 %}
                <table class="table table-striped">
                    <thead>
                        <th>Référence</th>
                        <th>Date de création</th>
                        <th>Prix</th>
                        <th>Détail</th>
                    </thead>
                    {% for order in orders %}
                        <tr>
                            <td>{{ order.reference }}</td>
                            <td>{{ order.createdAt|date("d/m/Y", "Europe/Paris") }}</td>
                            <td class="number">{{ order.baseTotal|number_format }}</td>
                            <td><a href="#">Détail</a></td>
                        </tr>
                    {% endfor %}
                </table>
            {% else %}
                <div class="panel-body">
                        <p>Vous n'avez pas encore fait de réservation.</p>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}